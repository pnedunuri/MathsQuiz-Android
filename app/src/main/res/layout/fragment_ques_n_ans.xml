<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sjsu.cmpe277.org.mathsquizcmpe277.QuesNAnsFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operand1"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operator"
        android:layout_below="@+id/operand1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/resultField"
        android:layout_below="@+id/eq"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eq"
        android:textSize="24sp"
        android:layout_below="@+id/operand2"
        android:layout_alignRight="@+id/operand2"
        android:layout_alignEnd="@+id/operand2"
        android:layout_marginTop="10dp" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="edu.sjsu.cmpe277.org.mathsquizcmpe277.TimerView"
        android:layout_toRightOf="@+id/operand1"
        android:layout_toEndOf="@+id/operand1"
        android:layout_marginLeft="156dp"
        android:layout_marginStart="156dp"
        android:layout_alignBottom="@+id/operator"
        android:id="@+id/animatedTimer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/operand2"
        android:textSize="24sp"
        android:layout_below="@+id/operator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quizcross"
        android:visibility="invisible"
        android:id="@+id/resultImage"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/resultField"
        android:layout_toRightOf="@+id/eq"
        android:layout_toEndOf="@+id/eq" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp">

        <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b1"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b2"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b3"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b6"
            android:layout_row="1"
            android:layout_column="2"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b5"
            android:layout_row="1"
            android:layout_column="1"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b4"
            android:layout_row="1"
            android:layout_column="0"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b7"
            android:layout_row="2"
            android:layout_column="0"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b8"
            android:layout_row="2"
            android:layout_column="1"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b9"
            android:layout_row="2"
            android:layout_column="2"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b10"
            android:layout_row="3"
            android:layout_column="1"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />

        <Button
            android:text="â†µ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go"
            android:layout_row="3"
            android:layout_column="2"
            android:elevation="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textSize="36sp" />
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quesCount"
        android:textSize="24sp"
        android:layout_below="@+id/operand2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

</RelativeLayout>
